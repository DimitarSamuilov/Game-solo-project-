{% extends("base.html.twig") %}

{% block main %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
        {% for error in app.session.flashBag.get('error') %}
            {{ error }}
        {% endfor %}
    {% endif %}
        </div>
        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form name="user" class="form-horizontal" method="POST">
                    <fieldset>
                        <legend>Login</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_username">Username</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="user_username" placeholder="Username"
                                       name="user[username]">
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_password">Password</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" required="required" id="user_password"
                                       name="user[password][first]"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_password_confirm">Confirm Password</label>
                            <div class="col-sm-6">
                                <input type="password" class="form-control" required="required"
                                       id="user_password_confirm"
                                       name="user[password][second]"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_email">Email</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="user_email" placeholder="Email"
                                       name="user[email]">
                            </div>
                        </div>
                        <div>
                            {{ form_widget(form._token) }}
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        {% endblock %}