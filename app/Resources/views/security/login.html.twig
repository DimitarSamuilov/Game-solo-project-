{% extends("base.html.twig") %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('security_login') }}" method="POST">
                <fieldset>
                    <legend>Login</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_username">Username</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_username" placeholder="Username"
                                   name="_username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password">Password</label>
                        <div class="col-sm-6">
                        <input  type="password" class="form-control"  id="user_password"
                                  name="_password" />
                        </div>
                    </div>
                    <div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate")  }}"/>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}